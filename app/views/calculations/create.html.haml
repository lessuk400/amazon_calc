.container
  .row.center-block
    .col-12
      = render 'shared/header'


      .calculation-output
        .col-8.m-auto
          .row
            .col-6
              %p.shift Amazon FBA fee:
              .output-field
                %p.text-center= "#{@facade.fba_fee_per_unit} per unit"
            .col-6
              %p.shift Amazon selling fee:
              .output-field
                %p.text-center= "#{@facade.selling_fee_per_unit} per unit"

        .col-8.m-auto
          .row.pt-3
            .col-6
              %p.shift Inbound shipping cost:
              .output-field
                %p.text-center= "#{@facade.shipping_cost_per_unit} per unit"
            .col-6
              %p.shift Import VAT & Duties cost:
              .output-field
                %p.text-center= "#{@facade.vat_duty_cost_per_unit.round(2)} per unit"

        .col-8.m-auto
          .row.pt-3
            .col-6.m-auto
              %p.shift Assumed Amazon PPC cost:
              .output-field
                %p.text-center= "#{@facade.ppc_cost_per_unit.round(2)} per unit"

        .col-8.m-auto
          .row.pt-3
            .col-6.m-auto
              %h3.shift Net cash profit:
              .output-field.green
                %p.text-center= "#{@facade.ppc_cost_per_unit.round(2)} per unit"
              .text-center
                = link_to 'Check another product', market_path(1)
