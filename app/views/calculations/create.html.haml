.container
  .row.center-block
    .col-12
      = render 'shared/header'

      .calculation-output
        .col-8.m-auto
          .row
            .col-6
              %p.shift= t('activerecord.attributes.calculation.output_form.fba_fee')
              .output-field.box-shadow
                %p.text-center= "#{number_to_currency(@facade.fba_fee_per_unit, unit: '£')} per unit"
            .col-6
              %p.shift= t('activerecord.attributes.calculation.output_form.amazon_selling_fee')
              .output-field.box-shadow
                %p.text-center= "#{number_to_currency(@facade.selling_fee_per_unit, unit: '£')} per unit"

        .col-8.m-auto
          .row.pt-3
            .col-6
              %p.shift= t('activerecord.attributes.calculation.output_form.inbound_shipping_cost')
              .output-field.box-shadow
                %p.text-center= "#{number_to_currency(@facade.shipping_cost_per_unit, unit: '£')} per unit"
            .col-6
              %p.shift= t('activerecord.attributes.calculation.output_form.vat_and_duties')
              .output-field.box-shadow
                %p.text-center= "#{number_to_currency(@facade.vat_duty_cost_per_unit.round(2), unit: '£')} per unit"

        .col-8.m-auto
          .row.pt-3
            .col-6
              %p.shift= t('activerecord.attributes.calculation.output_form.amazon_ppc_cost')
              .output-field.box-shadow
                %p.text-center= "#{number_to_currency(@facade.ppc_cost_per_unit.round(2), unit: '£')} per unit"
            .col-6
              %p.shift= t('activerecord.attributes.calculation.output_form.total_net_profit')
              .output-field.box-shadow
                %p.text-center= number_to_currency(@facade.total_net_cash_profit.round(2), unit: '£')

        .col-8.m-auto
          .row.pt-3
            .col-6.m-auto
              %h3.shift= t('activerecord.attributes.calculation.output_form.net_cash_profit')
              .output-field.green.box-shadow
                %p.text-center= "#{number_to_currency(@facade.ppc_cost_per_unit.round(2), unit: '£')} per unit"
              .text-center
                = link_to t('activerecord.attributes.calculation.output_form.check_another_product'), market_path(1)

  .cta-box
    = render 'cta_box'
